<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <nav role="navigation">
    <div class="d-flex justify-content-between align-items-center m-0 p-3 text-white">
      <%= link_to "â‡¦", auth_path, class:"text-white" %>
      <h3>LOGIN</h3>
      <div class="actions">
        <%= f.submit "Log In", id:"log_in" do %>
          Log In
        <% end %>
      </div>
    </div>
  </nav>
  <div class='fields mb-5'>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
  </div>
<% end %>

