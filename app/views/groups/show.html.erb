<nav role="navigation ">
  <%= render "header", title: "Transactions", other: "⇦" %>
  <div class="d-flex justify-content-around text-white align-items-center pb-3">
    <h4 class="m-0 entity-title"><%= @group.name %></h4>
    <button class="search-header">🔍</button>
    <p class="m-0">Most recent</p>
    <p class="m-0">Most ancient</p>
  </div>
  <%= form_tag(group_path(@group.id), method: :get, class:"search p-3") do %>
    <%= text_field_tag(:search, params[:search], placeholder:"search transaction") %>
  <% end %>
  <h4 class="text-white text-center">Total amount: <%= number_to_currency(@group.total, :unit => "$") %></h4>
</nav>


<div class="w-100 groups entities">

  <% @transactions.each do |entity| %>
  <%=render 'entity', entity:entity %>
  <% end %>
  <div class="w-100 new-group-btn">
  <%= link_to "Add a new transaction", new_entity_path(@group.id), class: "d-block text-white" %><br />
  </div>
</div>